{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "ADFSonjaDataMigration"
		},
		"AzureBlobStorage_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureBlobStorage'"
		},
		"SqlServer_onpremise_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'SqlServer_onpremise'",
			"defaultValue": "Integrated Security=True;Data Source=Sonja\\SQLEXPRESS;Initial Catalog=WideWorldImportersDW"
		},
		"SqlServer_onpremise_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'SqlServer_onpremise'"
		},
		"AzureSqlDatabase_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureSqlDatabase'"
		},
		"SqlServer_onpremise_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "AzureAD\\SonjaMehes"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "ADFSonjaDataMigration_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureBlobStorage_connectionString": {
						"value": "[parameters('AzureBlobStorage_connectionString')]"
					},
					"AzureSqlDatabase_connectionString": {
						"value": "[parameters('AzureSqlDatabase_connectionString')]"
					},
					"SqlServer_onpremise_connectionString": {
						"value": "[parameters('SqlServer_onpremise_connectionString')]"
					},
					"SqlServer_onpremise_password": {
						"value": "[parameters('SqlServer_onpremise_password')]"
					},
					"SqlServer_onpremise_properties_typeProperties_userName": {
						"value": "[parameters('SqlServer_onpremise_properties_typeProperties_userName')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}